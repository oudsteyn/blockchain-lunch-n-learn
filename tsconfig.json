{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "app",
    "target": "es6",
    "watch": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ]
}
